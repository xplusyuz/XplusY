
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAnon() { return request.auth != null && request.auth.token.firebase.sign_in_provider == "anonymous"; }

    match /scores/{docId} {
      allow create: if isAnon();
      allow read: if true;
      allow update, delete: if false;
    }

    match /user_points/{uid} {
      allow read: if true;
      allow create, update: if isAnon();
      allow delete: if false;
    }

    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
