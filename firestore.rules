rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && request.auth.token.email != null
        && request.auth.token.email == 'sohibjonmath@gmail.com';
    }

    // ===== Admin: manage everything (recommended for Admin panel only) =====
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
