rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{uid} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false;

      match /purchases/{pid} {
        allow create: if request.auth != null && request.auth.uid == uid;
        allow read: if request.auth != null && request.auth.uid == uid;
        allow update, delete: if false;
      }
      match /live_entries/{eid} {
        allow create: if request.auth != null && request.auth.uid == uid;
        allow read: if request.auth != null && request.auth.uid == uid;
        allow update, delete: if false;
      }
    }

    // PUBLIC CONTENT (admin CRUD)
    match /content_home/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /content_courses/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /content_tests/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /content_sim/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // LIVE events
    match /live_events/{liveId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      match /entries/{uid} {
        allow create: if request.auth != null && request.auth.uid == uid &&
          exists(/databases/$(database)/documents/live_events/$(liveId)) &&
          get(/databases/$(database)/documents/live_events/$(liveId)).data.startAt > request.time;
        allow read: if request.auth != null && (request.auth.uid == uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
        allow update, delete: if false;
      }
    }

    // COUNTERS
    match /counters/{name} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && name == "users";
      allow delete: if false;
    }
  }
}
