
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return isSignedIn() && request.auth.uid == uid; }

    // Public products example (if needed later)
    match /products/{id} {
      allow read: if true;
      allow write: if false;
    }

    // Meta counters (only server/admin ideally). For prototype allow reads; updates only via transaction by the user creating their own doc.
    match /meta/{doc} {
      allow read: if true;
      allow write: if false; // lock in production; counters updated via transaction in user creation
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }
  }
}
