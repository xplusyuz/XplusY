      "icon": "/svg/home.svg",
      "html":<div id='home'><style>
  .home-wrap{display:flex;flex-direction:column;gap:16px}
  .sec{background:var(--card, #fff);border:1px solid var(--frame,#e5e7eb);border-radius:16px;padding:12px}
  .sec-head{display:flex;align-items:center;justify-content:space-between;margin-bottom:8px}
  .sec-title{font-weight:800}
  .nav{display:flex;gap:6px}
  .nav button{border:1px solid var(--frame,#e5e7eb);background:var(--card,#fff);border-radius:10px;padding:6px 10px;cursor:pointer}
  .rail{display:grid;grid-auto-flow:column;gap:12px;overflow-x:auto;scroll-snap-type:x mandatory;scrollbar-width:none}
  .rail::-webkit-scrollbar{display:none}
  .card{position:relative;scroll-snap-align:center;border-radius:14px;overflow:hidden;flex:0 0 auto;aspect-ratio:16/9;background:#f3f4f6}
  .card[data-ratio="1:1"]{aspect-ratio:1/1}
  .card[data-ratio="4:3"]{aspect-ratio:4/3}
  .img{position:absolute;inset:0;background:#ddd center/cover no-repeat;transition:transform .25s}
  .card:hover .img{transform:scale(1.02)}
  .grad{position:absolute;inset:auto 0 0 0;height:48%;background:linear-gradient( to top, rgba(0,0,0,.55), rgba(0,0,0,0) )}
  .ttl{position:absolute;left:10px;bottom:10px;right:10px;color:#fff;font-weight:700;text-shadow:0 2px 6px rgba(0,0,0,.5)}
  .badge{position:absolute;top:8px;left:8px;padding:4px 8px;border-radius:999px;font-size:12px;color:#fff;background:#0008}
  .dots{display:flex;gap:6px;justify-content:center;margin-top:8px}
  .dot{width:6px;height:6px;border-radius:999px;background:#cbd5e1;opacity:.8}
  .dot.active{width:18px;background:#0ea5e9;opacity:1;transition:all .2s}
  @media (max-width:640px){ .sec{padding:10px} }
</style></div><script src='./chips/home.js'></script>"
    }
